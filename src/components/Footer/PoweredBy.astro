---
import { Image } from 'astro:assets';
import bunIcon from '@images/vendor-icons/bun-icon-white.svg';
import tailWindIcon from '@images/vendor-icons/tailwind-icon-white.svg';
import reactIcon from '@images/vendor-icons/react-icon-white.svg';
import directusIcon from '@images/vendor-icons/directus-icon-white.svg';
import astroIcon from '@images/vendor-icons/astrojs-icon-white.svg';
import typescriptIcon from '@images/vendor-icons/typescript-icon-white.svg';
interface Props {
    iconFill?: string;
    socialIconSize?: string;
}
const { iconFill = 'white', socialIconSize = 'h-14 w-14 max-w-14 max-h-14' } = Astro.props as Props;
---

<div class="hidden md:p-4 col-span-2 md:flex md:flex-col md:items-center">
    <div class="w-full h-6 bg-transparent rounded-sm text-center text-xs p-1 mb-1 text-white font-bold">POWERED BY</div>
    <div class="flex flex-wrap justify-center gap-3">
        <Image src={astroIcon} alt="Astro" class={`${iconFill} ${socialIconSize}`}/>
        <Image src={bunIcon} alt="Bun" class={`${iconFill} ${socialIconSize}`} />
        <Image src={tailWindIcon} alt="TailWind" class={`${iconFill} ${socialIconSize}`} />
        <Image src={reactIcon} alt="React" class={`${iconFill} ${socialIconSize}`} />
        <Image src={directusIcon} alt="Directus" class={`${iconFill} ${socialIconSize}`} />
        <Image src={typescriptIcon} alt="TypeScript" class={`${iconFill} ${socialIconSize}`} />
    </div>
    </div>
