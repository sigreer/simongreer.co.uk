---
import { Image } from "astro:assets";
import truenasIcon from "../images/vendor-icons/truenas-icon.png";
const { title, slug, tags, vendorlogo_icon } = Astro.props;

// Map the vendorlogo_icon to the imported images
const imageMap = {
  'truenas_icon': truenasIcon,
};

const selectedImage = imageMap[vendorlogo_icon];

---

<li class="flex flex-col rounded-md bg-white hover:shadow-lg hover:scale-105 shadow-md transition h-24">
  <a href={`tech/${slug}`} class="flex flex-row gap-x-1 p-1 relative h-full">
    <div class="w-1/5 overflow-hidden">
      <Image src={truenasIcon} alt={title} class="h-full rounded-md bg-gradient-to-tl from-slate-600 via-slate-900 to-slate-500 w-full object-cover object-center rounded-l-md"/>
    </div>

    <div class="flex flex-col gap-y-0 py-1 px-4 w-5/6">
      <h3 class="2xl:text-2xl font-semibold line-clamp-2 py-0 line- leading-5">
        {title}
      </h3>

      <div class="flex flex-wrap gap-1 tag-block">
        {tags?.map((tag) => (
          <span
            class="rounded-md px-2 py-1 text-xs md:text-sm font-semibold text-white shadow-sm-light transition tag-style" data-tag={tag}>
            {tag}
          </span>
        ))}
      </div>
    </div>
  </a>
</li>
