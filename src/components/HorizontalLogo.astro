---
import { Image } from "astro:assets";
import type { ImageMetadata } from 'astro';

interface Props {
  horizontal_logo: ImageMetadata;
  vendor_name: string;
}

const { horizontal_logo, vendor_name } = Astro.props;

---

<div class="w-full">
  {horizontal_logo ? (
    <Image 
      src={horizontal_logo} 
      alt={vendor_name} 
      width={200} 
      height={120} 
      format="avif"
      class="w-full"
      loading="lazy"
    />
  ) : (
    <p class="text-red-500">No logo available</p>
  )}
</div>