---
import GithubIcon from './SocialIcons/GithubIcon.astro';
import XIcon from './SocialIcons/XIcon.astro';
import MastadonIcon from './SocialIcons/MastadonIcon.astro';
---
<section class="relative overflow-hidden group banner banner-gradient shadow-[0px_0px_7px_0px_rgba(0,_0,_0,_0.6)] border-y border-black/10" data-style="banner">
  <div class="flex items-center justify-between 
  mx-auto h-16 max-h-16
  md:h-12 md:max-h-12 md:py-0
  lg:h-14 lg:max-h-14      
  xl:h-14 xl:max-h-14
  2xl:h-14 2xl:max-h-14
  3xl:h-14 3xl:max-h-14
  sm:w-full sm:max-w-full sm:px-4
  md:w-full md:max-w-full md:px-8
  lg:w-full lg:max-w-full lg:px-8
  xl:w-full xl:max-w-full xl:px-16 
  2xl:w-full 2xl:max-w-2xl 2xl:px-16
  3xl:w-full 3xl:max-w-2xl 3xl:px-16
  sm:text-lg font-poppins px-3
  ">
  <h3
  class="w-fit text-4xl font-bold relative">
  <span class="absolute top-0 h3-headline left-0 line-clamp-1">
    <a href="/">SimonGreer.co.uk</a>
  </span>
  <span class="text-4xl relative z-10 top-0 h3-shadow line-clamp-1">
    <a href="/">SimonGreer.co.uk</a>
  </span>
</h3>
<div class="hidden sm:flex items-center gap-x-2">
  <a href="https://github.com/sigreer" target="_blank" class="text-gray-200"><GithubIcon class="w-10 h-10 hover:scale-125 transition-all duration-300 text-white"/></a>
  <a href="https://x.com/sigreer" target="_blank" class="text-gray-200"><XIcon class="w-10 h-10 hover:scale-125 transition-all duration-300 text-white"/></a>
  <a href="https://fosstodon.org/@simongreer" target="_blank" class="text-gray-200"><MastadonIcon class="w-10 h-10 hover:scale-125 text-white"/></a>
</div>
</div>

</section>