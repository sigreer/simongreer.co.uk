---
import { Image } from 'astro:assets';
import BlogIcon from '../../images/icons/blog.svg';
const currentPath = Astro.url.pathname;
const isActive = currentPath === '/blog';
---

<a href="/blog" class:list={[
    "block antialiased font-sans text-sm leading-normal font-normal",
    isActive ? "text-purple-700" : "text-black"
]}>
    <div role="button" tabindex="0" class="w-full p-3 rounded-lg text-start leading-tight transition-all hover:bg-purple-200 hover:bg-opacity-80 focus:bg-purple-500 focus:bg-opacity-80 active:bg-purple-500 active:bg-opacity-80 hover:text-purple-900 focus:text-purple-900 active:text-purple-700 outline-none flex items-center gap-2 py-2 pr-4">
        <Image src={BlogIcon} alt="Blog" class:list={[
            "w-[18px] h-[18px]",
            isActive && "text-purple-700"
        ]}/>
        Blog Posts
    </div>
</a>