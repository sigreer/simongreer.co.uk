---
import KanbanIcon from '@icons/KanbanIcon.astro';
const currentPath = Astro.url.pathname;
const isActive = currentPath === '/projects';
---

<a href="/projects" 
class:list={[
    "block antialiased font-sans text-xl md:text-sm leading-normal font-normal",
    isActive ? "md:rounded-lg" : "text-black"
]}>
<div role="button" tabindex="0" 
class:list={[
    "w-full group pl-3 pr-4 py-2 md:rounded-lg text-start leading-tight transition-all outline-none flex items-center gap-2  hover:bg-purple-200 hover:bg-opacity-80 hover:text-purple-900",
    isActive && "bg-pink-700 text-white focus:bg-pink-500 focus:text-white"
    ]}>
        <KanbanIcon
            class:list={[
                "w-10 h-10 md:w-[18px] md:h-[18px] fill-black group-hover:fill-purple-900",
                "md:group-hover:fill-black",
                isActive && "!focus:fill-white group-focus:!fill-white group-hover:!fill-purple-900 fill-white"
            ]}
        />
        Projects
    </div>
</a>