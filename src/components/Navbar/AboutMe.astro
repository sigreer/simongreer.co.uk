---
import AccountCircleIcon from '@icons/AccountCircleIcon.astro';
import KanbanIcon from '@components/Icons/KanbanIcon.astro';
const currentPath = Astro.url.pathname;
const isActive = currentPath === '/me/professionally' || currentPath === '/me/personally';
---

<div class="relative group">
    <button class:list={[
        "block antialiased font-sans text-xl md:text-sm leading-normal font-normal w-full group/button",
        isActive ? "md:rounded-lg" : "text-black"
    ]}>
        <div class:list={[
            "w-full md:rounded-lg text-start leading-tight transition-all outline-none flex items-center gap-2 pl-3 pr-4 py-2 hover:bg-purple-200 group-hover:bg-purple-200 hover:bg-opacity-80 hover:text-purple-900 group-hover:text-purple-900",
            isActive && "bg-pink-700 text-white focus:bg-pink-500 focus:text-white hover:bg-purple-200 hover:text-purple-900"
        ]}>
            <AccountCircleIcon
            class:list={[
                "w-10 h-10 md:w-[18px] md:h-[18px] fill-black group-hover:fill-purple-900 group-hover/button:fill-purple-900",
                isActive && "fill-white hover:fill-purple-900"
            ]}
            />
            About Me
        </div>
    </button>

    <div class="absolute right-0 top-full pt-1 z-50">
        <div class="hidden group-hover:block w-48 bg-white rounded-none shadow-lg">
            <a href="/me/professionally" class="group/item px-4 py-2 text-sm text-gray-700 hover:bg-purple-200 hover:text-purple-900 text-left flex flex-row rounded-none antialiased font-sans">
                <AccountCircleIcon
                    class:list={[
                        "mr-2 w-10 h-10 md:w-[18px] md:h-[18px] fill-black group-hover/item:fill-purple-900"
                    ]}
                />
                Me Professionally
            </a>
        </div>
        <div class="hidden group-hover:block w-48 bg-white rounded-b-md shadow-lg">
            <a href="/me/personally" class="group/item px-4 py-2 text-sm text-gray-700 hover:bg-purple-200 hover:text-purple-900 text-left flex flex-row rounded-b-md antialiased font-sans">
                <KanbanIcon
                    class:list={[
                        "mr-2 w-10 h-10 md:w-[18px] md:h-[18px] fill-black group-hover/item:fill-purple-900"
                    ]}
                />
                Me Personally
            </a>
        </div>
    </div>
</div>