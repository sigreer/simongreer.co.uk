---
import NewspaperIcon from '@icons/NewspaperIcon.astro';
const currentPath = Astro.url.pathname;
const isActive = currentPath.startsWith('/blog');
---

<div class="relative group">
<a href="/blog" class:list={[
    "block antialiased font-sans text-xl md:text-sm leading-normal font-normal",
    isActive ? "md:rounded-lg" : "text-black dark:text-gray-200"
]}>
    <div class:list={["w-full md:rounded-lg text-start leading-tight transition-all outline-none flex items-center gap-2 pl-3 pr-4 py-2 \
    hover:bg-purple-200 group-hover:bg-purple-200 dark:hover:bg-background dark:group-hover:bg-background hover:bg-opacity-80 hover:text-purple-900 group-hover:text-purple-900 dark:border-neutral-800 dark:border",
            isActive && "bg-pink-700 text-white focus:bg-pink-500 focus:text-white hover:bg-purple-200 hover:text-purple-900 dark:bg-pink-700 dark:border-neutral-800 dark:border dark:hover:bg-background"
    ]}>
        <NewspaperIcon 
        class:list={[
            "w-10 h-10 md:w-[18px] md:h-[18px] fill-black dark:fill-gray-200 group-hover:fill-purple-900 group-hover/button:fill-purple-900",
            isActive && "fill-white hover:fill-purple-900 dark:fill-gray-200 dark:hover:fill-purple-900"
        ]}
        />
        Blog
    </div>
</a>
</div>