---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  slug: string;
  excerpt?: string;
  tags?: string[];
  coverimage?: string;
  className?: string;
  type?: 'blog' | 'tech' | 'tag' | 'project' | 'vendor';
}

const { title, slug, excerpt, tags, coverimage, className = "", type = 'blog' } = Astro.props;
const allCoverImages = import.meta.glob<{ default: ImageMetadata }>('../images/covers/*', { eager: true });
const coverImage = coverimage ? allCoverImages[`../images/covers/${coverimage}`]?.default : null;

// Determine the base path based on the content type
const basePath = type === 'tech' ? '/tech' : '/blog';
---

<li class={`rounded-md bg-white shadow-md transition hover:shadow-xl hover:scale-105 ${className}`}>
  <a href={`${basePath}/${slug}`} class="flex flex-col h-full gap-y-2 pb-2">
    {coverImage && (
      <div class="w-full h-48 rounded-t-md overflow-hidden">
        <Image 
          src={coverImage} 
          alt={title}
          width={400}
          height={300}
          class="w-full h-full object-cover object-center"
        />
      </div>
    )}
    <div class="flex flex-col gap-y-2 px-4">
      <h3 class="text-xl font-semibold line-clamp-2">
        {title}
      </h3>
      {excerpt && (
        <p class="text-gray-600 line-clamp-3">
          {excerpt}
        </p>
      )}
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 tag-block">
          {tags.map((tag) => (
            <a
              href={`/${type}?tag=${encodeURIComponent(tag)}`}
              class="inline-block rounded-md px-2 py-1 text-xs font-semibold text-white tag-style"
              data-tag={tag}
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </div>
  </a>
</li>

<script>
  // Ensure tag colors are applied after component loads
  document.addEventListener('astro:page-load', () => {
    if (typeof window.applyTagColorsToNewElements === 'function') {
      window.applyTagColorsToNewElements();
    }
  });
</script>