---
import PostLayout from "../../layouts/PostLayout.astro";
// @ts-ignore
import { CollectionEntry, getCollection, render } from 'astro:content';
import { Image } from "astro:assets";
import "@styles/codeblock.css";
import type { ImageMetadata } from 'astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { id: post.data.slug },
    props: { post,
      type: 'blog',
      title: post.data.title,
      slug: post.data.slug,
      coverimage: post.data.coverimage

     }
  }));
}

const { post, title, slug, coverimage } = Astro.props;
const { Content, headings } = await render(post);
const allImages = import.meta.glob<{ default: ImageMetadata }>('../../images/covers/*', { eager: true });
const ImageSrc = coverimage ? allImages[`../../images/covers/${coverimage}`]?.default : null;
const { data } = post as CollectionEntry<'blog'>;
---

<PostLayout title={title} slug={slug} toc={headings}>
  {ImageSrc && (
    <div class="relative w-full max-h-[70vh] items-center overflow-hidden rounded-b-lg border-white border-4 drop-shadow-lg">
      <Image 
        src={ImageSrc} 
        alt={title} 
        width={1200} 
        height={600} 
        format="webp"
        class="w-full h-full p-0 mt-0 rounded-none"
        loading="lazy"
      />
    </div>
  )}
  <Content />
</PostLayout>