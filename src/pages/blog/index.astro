---
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
const techs = await getCollection('tech');
import BlogLayout from "../../layouts/BlogLayout.astro";
import '@styles/custom.css';
import Card from "../../components/Card.astro";
import TechLine from "../../components/TechLine.astro";
---




<BlogLayout title="Blog">

  <section class="py-8 px-6 md:px-0">
    <div class="w-2/3 py-8">
      <div class="w-full bg-purple-700 rounded-t-lg">
        <h3 class="w-fit text-3xl font-bold relative my-2 px-4 py-3 text-white">Ze Blog Section</h3>
      </div>
      <ul class="grid gap-4
      grid-cols-1 
      sm:grid-cols-2 sm:gap-6 sm:px-0
      md:gap-4
      lg:grid-cols-3 lg:gap-6
      xl:grid-cols-3 xl:gap-6
      2xl:grid-cols-3 2xl:gap-6
    ">
    {posts.map(post => (
        <Card title={post.data.title}
              slug={post.data.slug}
              excerpt={post.data.excerpt}
              tags={post.data.tags}
              image={post.data.image}
              className="sm:block" />
      ))}
    </ul>
    
    </div>
    <div class="w-1/3">
      {techs.map(tech => (
        <TechLine tech={tech} />
      ))}
    </div>

</section>
</BlogLayout>

