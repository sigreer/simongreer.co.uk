---
import BaseLayout from '@layouts/BaseLayout.astro';
import RecentListening from '@components/Currently/RecentListening.astro';
import RecentViewing from '@components/Currently/RecentViewing.astro';
import FunnyFinds from '@components/Currently/FunnyFinds.astro';
---

<BaseLayout title="Currently | What I'm Up To">
    <main class="w-full mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-12 text-gray-900">What I'm Up To</h1>
        
        <section class="mb-16">
            <h2 class="text-2xl font-semibold mb-6 text-gray-800">Recent Listening</h2>
            <RecentListening />
        </section>

        <section class="mb-16">
            <h2 class="text-2xl font-semibold mb-6 text-gray-800">Recent Viewing</h2>
            <RecentViewing />
        </section>

        <section class="mb-16">
            <h2 class="text-2xl font-semibold mb-6 text-gray-800">Some Things I Found Funny</h2>
            <FunnyFinds />
        </section>
    </main>
</BaseLayout>