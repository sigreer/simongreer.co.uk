---
import { getCollection } from 'astro:content';
import PageLayout from "@layouts/PageLayout.astro";
import '@styles/custom.css';
import '@styles/lightbox.css';
import LightBox from '@components/Media/LightBox.astro';
import type { CollectionEntry } from 'astro:content';
import { GetInTouchDialog } from '@components/GetInTouchDialog';
import GoogleIcon from '@icons/GoogleIcon.astro';
import MicrosoftWindowsIcon from '@icons/MicrosoftWindowsIcon.astro';
import PricingAndInfoSection from '@components/Content/PricingAndInfoSection.astro';
import TechGrid from "@components/ContentBoxes/TechGrid.astro";
import { 
  Layers, Newspaper, SquareLibrary, Store, Cog, Bot, ShoppingCart, Database, Workflow, Network, Server, Paintbrush, Code, Rocket, Box, FileJson, FileType2, ArrowRightLeft, KeyRound, Calendar1, Terminal, Wallet, CircleDollarSign, BookUser, ScrollText, TicketsPlane, HardDriveDownload, FileText, Signature, PhoneCall, Headset, ChartColumnStacked, Asterisk, BookText, Mails,MessageSquareText, Plus, Minus, ThumbsUp, ThumbsDown
} from 'lucide-react';
import twentyScreenshot from '@images/screenshots/twentycrm1.png';
import documensoScreenshot from '@images/screenshots/documenso1.png';
import planeScreenshot from '@images/screenshots/plane1.png';
import nextcloudScreenshot from '@images/screenshots/nextcloud1.png';
import DocumensoIcon from '@components/Icons/DocumensoIcon.astro';
import NextcloudIcon from '@components/Icons/NextcloudIcon.astro';
import { Badge } from '@components/ui/badge';
type TechWithStringTags = Omit<CollectionEntry<'tech'>, 'data'> & {
  data: Omit<CollectionEntry<'tech'>['data'], 'tags'> & {
    tags: string[] | undefined
  }
};

const techs = (await getCollection('tech')) .filter((tech) => 
    tech.data.pubDate && tech.data.hireme_filter === 'storage'
  )
  .map((tech) => ({
    ...tech,
    data: {
      ...tech.data,
      tags: tech.data.tags?.map(tag => tag.id)
    }
  })) as TechWithStringTags[];
