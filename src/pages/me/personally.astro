        <div class="flex-col flex w-1/2">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 dark:text-themepurple">Me Personally</h3>
            <ul class="space-y-3">
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <MapPin className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Northamptonshire, UK</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <Music className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Bass guitar and drums</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <Headphones className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Vinyl</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <Footprints className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Running, kayaking</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <PersonStanding className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Man Utd, Lakers, Saints</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <Volleyball className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Basketball</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <Baby className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Family</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <Paintbrush className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Weird art</span>
                </li>
                <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
                    <Cat className="w-5 h-5 mt-0.5 flex-shrink-0 text-themepink" />
                    <span class="text-base">Cats (+ dogs + all other animals)</span>
                </li>
            </ul>
        </div>
            </div>
