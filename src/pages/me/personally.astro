    <div class="flex flex-row gap-4">
        <div class="flex flex-col w-1/2">
            <div class="flex w-full">

                <Image
                    src={SimonBackwardsHead}
                    alt="My Backwards Head"
                    class="w-full h-auto object-cover rounded-lg border-4 border-white drop-shadow-md"
                />
            </div>
