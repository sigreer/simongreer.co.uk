{
  "name": "@sigreer/simongreercouk",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "wrangler types && astro dev",
    "build": "wrangler types && astro build",
    "preview": "astro build && wrangler pages dev",
    "astro": "astro",
    "deploy": "echo 'THIS PREPARES THE SITE FOR DEPLOYMENT. YOU STILL NEED TO PUSH TO GITHUB!!' && wrangler types && astro sync --clear && astro build",
    "dump": "wrangler types && astro sync --clear && astro build && wrangler deploy --dry-run",
    "sync": "astro sync --clear",
    "lint": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "purge": "rm -rf ./node_modules && rm bun.lockb && rm -rf ./.astro && rm -rf ./.wrangler && bun pm cache rm && rm -rf ./dist",
    "update": "bun install && bun update && bun upgrade",
    "pagespeed": "node scripts/pagespeed-report.cjs"
  },
